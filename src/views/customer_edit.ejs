<%- include('partials/_header') %>


<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= data.id %>" method="post">
                        <div class="form-group mt-4">
                          <input
                            type="text"
                            name="name"
                            value="<%= data.name %>"
                            
                            class="form-control"
                            id=""
                            maxlength="50"
                          />
                        </div>
                        <div class="form-group mt-4">
                          <input
                            type="text"
                            name="address"
                            value="<%= data.address %>"
                            
                            class="form-control"
                            id=""
                            maxlength="100"
                          />
                        </div>
                        <div class="form-group mt-4">
                          <input
                            type="text"
                            name="phone"
                            value="<%= data.phone %>"
                            
                            class="form-control"
                            id=""
                            maxlength="15"
                          />
                        </div>
                        <button type="submit" class="btn btn-primary mt-4 w-100">
                          Edit customer
                        </button>
                      </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer') %>
