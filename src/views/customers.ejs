<%- include('partials/_header') %>


<div class="container">
  <div class="row mt-5">
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>nÂ°</th>
                <th>Name</th>
                <th>Adress</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if(data){ %>
                <% for(var i =0;i < data.length; i++){ %>
                    <tr>
                        <td><%= (i+1) %></td>
                        <td><%= data[i].name %></td>
                        <td><%= data[i].address %></td>
                        <td><%= data[i].phone %></td>
                        <td>
                            <a href="/delete/<%=data[i].id%>" class="btn btn-danger">Delete</a>
                            <a href="/update/<%=data[i].id%>" class="btn btn-info">Update</a>
                        </td>
                    </tr>
               <% }%>
            <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="post">
            <div class="form-group mt-4">
              <input
                type="text"
                name="name"
                placeholder="Insert a name"
                class="form-control"
                id=""
                maxlength="50"
              />
            </div>
            <div class="form-group mt-4">
              <input
                type="text"
                name="address"
                placeholder="Insert an address"
                class="form-control"
                id=""
                maxlength="100"
              />
            </div>
            <div class="form-group mt-4">
              <input
                type="text"
                name="phone"
                placeholder="Insert a phone"
                class="form-control"
                id=""
                maxlength="15"
              />
            </div>
            <button type="submit" class="btn btn-primary mt-4 w-100">
              Save customer
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/_footer') %>
